<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Contador_de_Dinheiro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Contador_de_Dinheiro.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Contador_de_Dinheiro"
    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource BackgroundDark}}">

    <TabBar>
        <ShellContent
            Title="Contagem"
            ContentTemplate="{DataTemplate views:ContagemView}"/>

        <ShellContent
            Title="Salvos"
            ContentTemplate="{DataTemplate views:ContagensSalvasView}"/> 
    </TabBar>
    
</Shell>
